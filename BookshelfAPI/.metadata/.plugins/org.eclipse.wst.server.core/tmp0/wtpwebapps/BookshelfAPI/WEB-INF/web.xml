<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0"
 xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
 <display-name>BookshelfAPI</display-name>
 <servlet>
  <display-name>Bookshelf API v10</display-name>
  <servlet-name>BookshelfAPIv10</servlet-name>
  <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
  <init-param>
   <param-name>jersey.config.server.provider.packages</param-name>
   <param-value>com.goldengekko.bookshelf.api.v10</param-value>
  </init-param>
 </servlet>
 <servlet-mapping>
  <servlet-name>BookshelfAPIv10</servlet-name>
  <url-pattern>/v10/*</url-pattern>
 </servlet-mapping>
 <resource-ref>
  <description>Items data base</description>
  <res-ref-name>jdbc/GoldenGekkoItemsDb</res-ref-name>
  <res-type>javax.sql.DataSource</res-type>
  <res-auth>Container</res-auth>
</resource-ref>
</web-app>
